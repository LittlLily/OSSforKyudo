{
  "name": "oss-for-kyudo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",

    "cf:build": "opennextjs-cloudflare build",
    "cf:dev": "opennextjs-cloudflare dev",
   "cf:deploy:dev": "opennextjs-cloudflare deploy --env dev --env-file .dev.vars",
   "cf:deploy:prod": "opennextjs-cloudflare deploy --env production --env-file .prod.vars",

   "env:use:dev": "cp .env.production.dev .env.production",
   "env:use:prod": "cp .env.production.prod .env.production",

    "deploy:dev": "pnpm env:use:dev && pnpm cf:build && pnpm cf:deploy:dev",
   "deploy:prod": "pnpm env:use:prod && pnpm cf:build && pnpm cf:deploy:prod",

    "db:migrate:dev": "pnpm supabase db push --project-ref $SUPABASE_PROJECT_REF_DEV",
    "db:migrate:prod": "pnpm supabase db push --project-ref $SUPABASE_PROJECT_REF_PROD"
  },
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "next": "15.5.9",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.14.7",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.9",
    "supabase": "^2.70.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.54.0"
  }
}
